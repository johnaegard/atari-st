FILESELECT "\*.PIC","",f$
IF EXIST(f$)
  OPEN "i",#1,f$
  screen$=INPUT$(32000,#1)   ! You will need your own .PIC file!
  s_adr%=V:screen$
  d_adr%=XBIOS(2)
  '
  FOR i%=1 TO 1000
    RC_COPY s_adr%,RAND(10)*64,RAND(10)*40,64,40 TO d_adr%,RAND(10)*64,RAND(10)*40
  NEXT i%
  '
  CLOSE #1
ENDIF
